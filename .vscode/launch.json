    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "hostname": "localhost",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/vhosts/": "${workspaceRoot}/sites"
            },
            "xdebugSettings": {
                "max_children": 1024,
                "max_data": 1024
            }

        }
    ]
}